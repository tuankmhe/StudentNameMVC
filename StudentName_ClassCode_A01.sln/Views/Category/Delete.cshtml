@model DataAccessLayer.Models.Category
@{
    ViewData["Title"] = "Confirm Delete Category";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete the following category?</p>
</div>

<dl class="row">
    <dt class="col-sm-3">Category Name</dt>
    <dd class="col-sm-9">@Model.CategoryName</dd>
    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">@Model.CategoryDesciption</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
